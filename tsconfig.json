{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client", "uview-plus/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "config/**/*", "./components.d.ts","./auto-imports.d.ts", "src/utils/bundle.ts"],
  "exclude": ["node_modules", "dist", "dist-beta", "dist-production"]
}
